<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="rda_management.TradingBeerScreen">
        <div class="trading-beer">
            <h1>Trading Beer</h1>
            <Dropdown togglerClass="'btn btn-secondary'" showCaret="true">
                <t t-set-slot="toggle">
                    <t t-esc="state.product_name"/>
                </t>
                <t t-foreach="rda.product_ids" t-as="product" t-key="product.id">
                    <DropdownItem onSelected="() => this._onSelected(product)">
                        <t t-esc="product.name"/>
                    </DropdownItem>
                </t>
            </Dropdown>
        </div>
        <div id="containers">
        </div>
    </t>
</templates>
